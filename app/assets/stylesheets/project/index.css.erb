.trash, .edit {
  width: 30px;
  height: 30px;
  visibility: hidden;
  background-size: 100%;
  background-position: center;
  background-repeat: no-repeat;
}

.trash {
  background-image: url(<%= asset_path "delicon_2.png" %>)
}

.edit {
  background-image: url(<%= asset_path "renameicon_2.png" %>)
}

.trash:hover {
  background-image: url(<%= asset_path "delicon.png" %>)
}

.edit:hover {
  background-image: url(<%= asset_path "renameicon.png" %>)
}

#projectPage {
  margin-top: 100px;
  margin-left: 200px;
}

#projectPage > div, #projectData > div > div {
  display: inline-block;
  vertical-align: top;
}

#projectPage h1 {
  color: rgba(105, 49, 0, 1);
  font-size:40px;
  text-shadow: -1px 0px black;
  text-shadow: 2px 0px 5px gray;
}

#projectData > div > span {
  color:#A87446;  
  cursor: pointer;  
  text-shadow: -1px 0px gray;
}

#projectData > div:hover .edit, #projectData > div:hover .trash {
  visibility: visible;
  cursor: pointer;
  float:right;
}

#projectData > div:hover span{
  cursor: pointer;
  color:#FF6587;
  text-shadow:1px 1px 5px white;
}

#personalData {
  margin-top: 50px;
  margin-right: 60px;
  text-align:center;
}

#projectData > p {
  display: block;
}

#projectData input, #projectData span {
  height: 30px;
  font-size: 25px;
}

#projectData input {
  border: none;
  outline: none;
  background: rgba(255, 255, 255, 1);
  border-radius: 5px;
  width: 325px;
}

#projectData > div {
  width: 325px;
  height: 30px;
}

#projectData > hr {
  width: 325px;
  height: 4px;
  background: rgba(243, 216, 209, 1);
  border: none;
}

#pHeadImg {
  height: 175px;
  width: 175px;
  background-size: 100%;
  background-repeat: no-repeat;
  background-position: center;
  border:6px solid rgba(250, 216, 209, 1);
  box-shadow:5px 5px 10px #888888;
  border-radius:5px;
}

#pName {
  display: block;
  text-align: center;
  margin-top: 15px;
  font-size:32px;
  text-shadow: 0px -1px black;
  color:rgba(127, 84, 0, 1);
}

#addButton {
  margin-top: 3px;
  padding-top: 2px;
  height: 20px;
  width: 40px;
  margin-left: 283px;
  color: rgba(208, 176, 138, 1);
  text-align: center;
}

#addButton:hover {
  background: rgba(255, 173, 214, 1);
  border-radius: 5px;
  box-shadow: 0px 1px 2px 1px rgba(128, 128, 128, 1);
  color: rgba(98, 54, 7, 1);
  /*color:white;*/
  text-shadow:1px 1px 3px white;
  cursor: pointer;
}

#addButton:active {
  background: rgba(255, 173, 214, 1);
  color: rgba(98, 54, 7, 1);
  border-radius: 5px;

  box-shadow: 0px 0px 2px 1px rgba(128, 128, 128, 1);
  cursor: pointer;
}
