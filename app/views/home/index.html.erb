<div id="fb-root"></div>
<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '<%= @appid %>', // App ID
    //channelUrl : '//WWW.YOUR_DOMAIN.COM/channel.html', // Channel File
      status     : true, // check login status
      cookie     : true, // enable cookies to allow the server to access the session
      xfbml      : true  // parse XFBML
    });
    <% if @gp_client.authorization.access_token || rest_graph.access_token %>
      $("#headImg").css("background", "url(<%= @img %>)");
      commonLoginAction();
    <% end %>
  };
  (function(d){
    var js, id = 'facebook-jssdk', ref = d.getElementsByTagName('script')[0];
    if (d.getElementById(id)) {return;}
    js = d.createElement('script'); js.id = id; js.async = true;
    js.src = "//connect.facebook.net/en_US/all.js";
    ref.parentNode.insertBefore(js, ref);
  }(document));

  function commonLoginAction() {
    $(".unlogin").removeClass("unlogin").addClass("login");
    doBlockingStart();
    $.ajax({
      url: "project",
      error: function(err) {
        cosole.log(err);
        doBlockingEnd();
      },
      success: function(response) {
        //console.log($(response));
        var obj = $(response);
        var list = [];
        $("#content").empty();
        obj.each(function () {
          if ($(this).attr("src")) {
            var script = document.createElement('script');
            script.type = 'text/javascript';
            script.src = $(this).attr("src");
            document.getElementById("content").appendChild(script);
          }
        });
        $("#content").append(response);
        doBlockingEnd();      
      },
    });
  };

  function doBlockingStart() {
    console.log("start blocking");
  };  
  function doBlockingEnd() {
    console.log("end blocking");
  };  

</script>
